<%= form_with model: @category do |form| %>
    <div>
        Category
        <%= form.text_field :category %>
    </div>

    <div>
        Display Color
        <input type="color" name="category[display_color]" id="category_display_color">
    </div>

    <%= form.hidden_field :category_total, value: 0 %>

    <%= form.submit %>
<% end %>