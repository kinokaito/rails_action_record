

<%= form_with(model: @action, local: true) do |form| %>
  <%= form.label :category %>
  <%= form.collection_select :category, Category.all, :category, :category, prompt: "Select Category" %>

  <%= form.button "Start", type: "button", id: "start-button" %>
  <%= form.button "End", type: "button", id: "end-button", disabled: true %>

  <%= form.hidden_field :start_time, id: "start-time-field" %>
  <%= form.hidden_field :end_time, id: "end-time-field" %>
  <%= form.hidden_field :day, id: "day-field", value: Date.today %>
  <%= form.hidden_field :total_time, id: "total-time-field" %>

  <%= form.submit %>
<% end %>
